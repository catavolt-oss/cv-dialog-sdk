{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
	    "module": "es6",
        "moduleResolution": "node",
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "src/js",
        "declarationDir": "src/tsd",
        "declaration": true,
        "allowSyntheticDefaultImports": true
    },
    "include":[
      "./src/**/*.ts"
    ],
    "exclude":[
       "./src/**/*.d.ts"
    ]
}
